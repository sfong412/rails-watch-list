<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://undermoonlightsite.files.wordpress.com/2020/08/img_similarmovie-roomtheroom_2.jpg);">
  <div class="container">
    <h1>Save a movie. Any movie.</h1>
    <p>Seriously.</p>
  </div>
</div>
<div class="container">
  <div class="row-list-header">
    <h2>My lists</h2>
    <%= link_to "Create a new list", new_list_path, class: "btn btn-flat" %>
  </div>
  <div class="row">
  <% @lists.each do |list| %>
    <div class="col-sm-6">
      <div class="card" style="width: 18rem;">
        <%= cl_image_tag list.photo.key, alt: "...", class: "card-img-top", crop: :fill %>
        <div class="card-body">
          <div class="card-text">
            <%= link_to list.name, list_path(list) %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div>
</div>
